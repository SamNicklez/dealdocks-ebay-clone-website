%nav.navbar
  .container
    = link_to root_path, class: 'navbar-brand' do
      = image_tag('logo.png', alt: 'Logo', class: 'navbar-logo')
    - if logged_in?
      = link_to 'Sell Item', sell_path, class: 'nav-link'
      = link_to 'Profile', profile_path, class: 'nav-link'
      .search-bar
        = form_tag search_path, method: :get do
          = text_field_tag :query, params[:query], placeholder: "Search items...", class: 'search-input'
          = submit_tag "Search", class: 'search-button'
      = link_to 'Logout', logout_path, method: :delete, data: { confirm: 'Are you sure?' }, class: 'logout-button'
    - else
      = link_to 'Login', login_path, class: 'nav-link'
      = link_to 'Sign Up', signup_path, class: 'nav-link'
