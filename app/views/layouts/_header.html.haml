%nav.navbar
  .container
    = link_to root_path, class: 'navbar-brand' do
      = image_tag('logo.png', alt: 'Logo', class: 'navbar-logo')
    .search-bar
      = form_tag search_path, method: :get do
        = text_field_tag :search_term, params[:search_term], placeholder: "Search items...", class: 'search-input'
        = submit_tag "Search", class: 'search-button'
    - if logged_in?
      = link_to 'Sell Item', sell_path, class: 'nav-link'
      = link_to 'Profile', "/profile/#{@current_user.id}", class: 'nav-link'
      = link_to 'Logout', logout_path, method: :delete, data: { confirm: 'Are you sure?' }, class: 'logout-button'
    - else
      = link_to 'Login', '/auth/google_oauth2', method: :post, class: 'nav-link'
      = link_to 'Sign Up', signup_path, class: 'nav-link'
